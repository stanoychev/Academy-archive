@model Sensei.Data.Models.Intermediate.SensorDisplayData

<div class="col-md-4 col-sm-4 col-xs-12">
    <div role="main">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    <b><span class="green">Modifying</span> @Model.SensorName</b>
                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                @using (Html.BeginForm("ModifySelectedSensor", "Sensor", FormMethod.Post, new { @class = "form-horizontal form-label-left", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(m => m.SensorId)
                    @Html.HiddenFor(m => m.UserName)
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            @Html.LabelFor(m => m.SensorName)
                        </label>
                        <span class="text-danger pull-left">
                            @Html.ValidationMessageFor(m => m.SensorName)
                        </span>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.EditorFor(m => m.SensorName, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                        </div>
                    </div>
                    if (Model.MeasurementType != "(true/false)")
                    {
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                @Html.LabelFor(m => m.MinValue)
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.EditorFor(m => m.MinValue, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                @Html.LabelFor(m => m.MaxValue)
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.EditorFor(m => m.MaxValue, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                            </div>
                        </div>
                    }
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            @Html.LabelFor(m => m.IsPublic)
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.EditorFor(m => m.IsPublic, new { htmlAttributes = new { @class = "checkbox col-xs-12" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            @Html.LabelFor(m => m.DescriptionGivenByTheUser)
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.EditorFor(m => m.DescriptionGivenByTheUser, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button class="btn btn-primary close-link" type="button">Cancel</button>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
